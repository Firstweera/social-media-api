{
  "name": "socialmedia-api",
  "version": "1.0.0",
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "@yarnpkg/pnpify": "^4.0.0-rc.50",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fp-ts": "^2.16.1",
    "io-ts": "^2.2.20",
    "io-ts-extra": "^0.11.6",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "prisma": "^5.5.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@prisma/migrate": "^5.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.9",
    "@types/pg": "^8.10.2",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register src/main.ts",
    "start": "ts-node -r tsconfig-paths/register src/main",
    "postinstall": "prisma generate",
    "prisma:merge": "cat prisma/schema/**.prisma > prisma/schema.prisma",
    "prisma:format": "npx prisma format",
    "prisma:migrate": "yarn pnpify prisma migrate dev --name init --schema prisma/schema.prisma",
    "prisma:generate": "yarn pnpify prisma generate --schema=prisma/schema.prisma",
    "test": "jest --verbose",
    "test:test": "jest -- src/test"
  }
}
